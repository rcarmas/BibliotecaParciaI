@{
    ViewData["Title"] = "Generar Reportes";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                <a class="navbar-brand" href="#">CAJ SISTEMA BIBLIOTECARIO</a>
                <span class="navbar-text text-light ms-2">
                    Bienvenido!
                </span>
            </div>
            <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary">Volver al Dashboard</a>
        </div>
    </nav>

    <div class="container">
        <h2 class="text-center mb-4">Generar Reportes</h2>

        <!-- Formularios en dos columnas -->
        <div class="row g-4 mb-5">
            <!-- Reporte de Préstamos Activos -->
            <div class="col-md-6">
                <div class="card shadow-sm p-4">
                    <h4 class="mb-3">Reporte de Préstamos Activos</h4>
                    <form method="get" action="/Admin/GenerateActiveLoansReport">
                        <div class="form-group mb-3">
                            <label for="StartDate" class="form-label">Fecha de Inicio</label>
                            <input type="date" id="StartDate" name="startDate" class="form-control" />
                        </div>

                        <div class="form-group mb-3">
                            <label for="EndDate" class="form-label">Fecha de Fin</label>
                            <input type="date" id="EndDate" name="endDate" class="form-control" />
                        </div>

                        @* <div class="form-group mb-3">
                            <div class="form-check">
                                <input type="checkbox" id="ExportToCsv" name="exportToCsv" class="form-check-input" checked />
                                <label for="ExportToCsv" class="form-check-label">Exportar a CSV</label>
                            </div>
                        </div> *@

                        <button type="submit" class="btn btn-primary w-100">Generar Reporte</button>
                    </form>
                </div>
            </div>

            <!-- Reporte de Historial de Usuario -->
            <div class="col-md-6">
                <div class="card shadow-sm p-4">
                    <h4 class="mb-3">Reporte de Historial de Usuario</h4>
                    <form method="get" action="/Admin/GenerateUserHistoryReport">
                        <div class="form-group mb-3">
                            <label for="UserName" class="form-label">Usuario</label>
                            <select id="UserName" name="userId" class="form-control">
                                @foreach (var user in ViewBag.Users)
                                {
                                    <option value="@user.Id">@user.Name</option>
                                }
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Generar Reporte</button>
                    </form>
                </div>
            </div>

        </div>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
